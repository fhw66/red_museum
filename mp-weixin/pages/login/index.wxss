.login-container{min-height:100vh;background-color:#fff;display:flex;flex-direction:column}.map-container{position:relative;height:70vh;background:#ff4d4f;overflow:hidden}.map-image{width:100%;height:100%;-o-object-fit:contain;object-fit:contain}.map-overlay{position:absolute;top:15%;left:0;right:0;display:flex;flex-direction:column;align-items:center;padding:40rpx}.title{font-size:48rpx;color:#fff;font-weight:700;margin-bottom:20rpx;text-shadow:0 2px 4px rgba(0,0,0,.2)}.subtitle{font-size:32rpx;color:rgba(255,255,255,.9);text-align:center;text-shadow:0 1px 2px rgba(0,0,0,.1)}.bottom-section{flex:1;padding:40rpx;display:flex;flex-direction:column;justify-content:space-between;background:#fff;border-radius:40rpx 40rpx 0 0;margin-top:-40rpx;box-shadow:0 -4rpx 16rpx rgba(0,0,0,.1)}.info-section{padding:20rpx 0}.info-text{font-size:28rpx;color:#666;display:block;margin-bottom:16rpx}.count-text{font-size:36rpx;color:#333;font-weight:700;display:block}.start-button{background:linear-gradient(135deg,#e74c3c,#c0392b);border:none;border-radius:100rpx;padding:30rpx;display:flex;align-items:center;justify-content:center;margin-top:40rpx}.button-text{color:#fff;font-size:32rpx;font-weight:700;margin-right:12rpx}.button-icon{color:#fff;font-size:32rpx;font-weight:700}.button-hover{transform:translateY(2rpx);opacity:.9}
