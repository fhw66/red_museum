.container{padding:20rpx;background-color:#f5f5f5;min-height:100vh}.category-section{margin-bottom:40rpx}.category-title{font-size:36rpx;font-weight:700;margin:20rpx 0;color:#333;padding-left:20rpx;border-left:8rpx solid #e74c3c}.museum-grid{display:flex;flex-direction:column;gap:20rpx}.museum-card{background:#fff;border-radius:16rpx;overflow:hidden;box-shadow:0 4rpx 12rpx rgba(0,0,0,.1);display:flex;height:240rpx}.museum-image{width:240rpx;height:100%;-o-object-fit:cover;object-fit:cover}.museum-info{flex:1;padding:20rpx;display:flex;flex-direction:column;justify-content:space-between}.museum-name{font-size:32rpx;font-weight:700;color:#333;margin-bottom:10rpx}.museum-desc{font-size:26rpx;color:#666;line-height:1.4;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;overflow:hidden}.enter-btn{background:linear-gradient(135deg,#e74c3c,#c0392b);color:#fff;font-size:28rpx;padding:12rpx 24rpx;border-radius:100rpx;display:flex;align-items:center;justify-content:center;width:-moz-fit-content;width:fit-content;margin-top:16rpx;border:none}.arrow{margin-left:8rpx}.button-hover{transform:translateY(2rpx);opacity:.9}
